{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/post/:slug",
      "destination": "/post.html?slug=:slug"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs"
    },
    "server/**/*.js": {
      "runtime": "nodejs"
    }
  }
}