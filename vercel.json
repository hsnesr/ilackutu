{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/post/:slug",
      "destination": "/post.html?slug=:slug"
    },
    {
      "source": "/:slug",
      "has": [
        {
          "type": "query",
          "key": "slug"
        }
      ],
      "destination": "/post.html"
    },
    {
      "source": "/:slug",
      "destination": "/post.html?slug=:slug"
    }
  ]
}
